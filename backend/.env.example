# Production Environment Variables
NODE_ENV=production
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fotovideo_production?schema=public"
REDIS_URL="redis://localhost:6379"

# API Keys & Secrets
GEMINI_API_KEY=your_gemini_api_key_here
JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_32_chars

# File Storage Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,video/mp4,audio/wav,audio/mp3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PREMIUM_MAX=500

# Cloud Storage (Optional - choose one)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fotovideo-assets

# Or Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_BUCKET=fotovideo-assets

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
TRUST_PROXY=true
SESSION_COOKIE_SECURE=true